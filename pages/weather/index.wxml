<view class="page"><scroll-view class="tabView" scroll-x="true"><block wx:for="{{tabs}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['tabClick',[index]]]]]}}" class="{{['tab',defaultIndex==index?'tabActive':'']}}" bindtap="__e">{{''+item+''}}</view></block></scroll-view><view class="topView"><block wx:if="{{weatherList.wea_img}}"><image src="{{'http://codegen.caihongy.cn/'+weatherList.wea_img+'.gif'}}" mode="widthFix"></image></block><view class="location left50 colorbai"><block wx:if="{{defaultIndex==0}}"><image src="/static/weather/location.png" mode="widthFix"></image></block><view class="city">{{weather.city}}</view></view><view class="wea left50 colorbai">{{weatherList.wea+" | 空气"+weatherList.air_level}}</view><view class="tem left50 colorbai">{{weatherList.tem}}</view><view class="tem1 left50 colorbai">{{weatherList.tem2+" / "+weatherList.tem1}}</view><image class="add" src="/static/weather/add.png" mode="widthFix" data-event-opts="{{[['tap',[['addClick',['$event']]]]]}}" bindtap="__e"></image></view><view class="centerView"><block wx:for="{{topList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="box"><view class="img" style="{{'background:'+(item.color)+';'}}"><image src="{{'/static/weather/class/'+index+'.png'}}" mode="aspectFill"></image></view><view class="name">{{item.name}}</view><view class="value">{{weatherList[item.value]}}</view></view></block></view><view class="title">小时预报</view><scroll-view class="hourView" scroll-x="true"><block wx:for="{{weatherList.hours}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="hours"><view class="hour"><view class="time">{{item.hours}}</view><view class="img"><image src="{{'/static/weather/wea/'+item.wea_img+'.png'}}" mode="widthFix"></image></view><view class="tem">{{item.tem+"°"}}</view></view></view></block></scroll-view><view class="title">七天天气</view><view class="dayView"><scroll-view class="dayScrollView" scroll-x="true"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="days"><view class="day"><view class="time">{{item.g0[1]+"/"+item.g1[2]}}</view><view class="img"><image src="{{'/static/weather/wea/'+item.$orig.wea_img+'.png'}}" mode="widthFix"></image></view><view class="wea">{{item.$orig.wea}}</view></view></view></block></scroll-view></view><view class="title">生活指数</view><block wx:if="{{weatherList.index}}"><view class="lifeView"><block wx:for="{{lifeList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="box"><view class="img"><image src="{{'/static/weather/class/1'+index+'.png'}}" mode="aspectFill"></image></view><view class="name">{{item.name}}</view><view class="value">{{weatherList.index[index].level}}</view></view></block></view></block><view class="title">日出日落</view><view class="dayView"><block wx:if="{{value}}"><custom-progress style="border-bottom:1rpx solid #e6e6e6;" vue-id="5abcd2f8-1" value="{{value}}" bind:__l="__l"></custom-progress></block><view class="richu"><view class="chu">{{"日出 "+weatherList.sunrise}}</view><view class="chu">{{"日落 "+weatherList.sunset}}</view></view></view><view class="kong"></view><block wx:if="{{showType}}"><view class="showBox"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="showBG" bindtap="__e"></view><view class="showView"><input type="text" placeholder="请输入城市名" placeholder-style="font-size:26upx" data-event-opts="{{[['input',[['__set_model',['','city','$event',[]]]]]]}}" value="{{city}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['searchClick',['$event']]]]]}}" class="btn" bindtap="__e">搜索</view></view></view></block></view>